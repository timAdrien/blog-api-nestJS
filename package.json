{
  "name": "blog-api",
  "version": "0.0.1",
  "description": "It's my API for my awesome blog !",
  "author": "timAdrien",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/index.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "./node_modules/.bin/jest --silent=false --detectOpenHandles --config=jest.json",
    "e2e": "./node_modules/.bin/jest --silent=false --runInBand --config=test/jest-e2e.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "jest-run": "./node_modules/.bin/jest --silent=false --config=jest.json"
  },
  "dependencies": {
    "@nest-modules/mailer": "^1.0.4",
    "@nestjs/common": "^5.6.2",
    "@nestjs/core": "^5.4.0",
    "@nestjs/jwt": "^0.2.1",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/swagger": "^2.5.1",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.0",
    "@types/passport-jwt": "^3.0.1",
    "bcrypt": "^3.0.2",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "dotenv": "^6.2.0",
    "dotenv-safe": "^6.1.0",
    "graceful-fs": "^4.1.15",
    "jest-leak-fixer": "0.0.5",
    "moment": "^2.24.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "pg": "^7.7.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "tslint-plugin-prettier": "^2.0.1",
    "typeorm": "^0.2.11",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.5.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "jest": "^23.6.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "prettier-tslint": "^0.4.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "^1.17.0"
  }
}
